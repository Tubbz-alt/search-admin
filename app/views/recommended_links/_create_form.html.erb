<%= form_for(recommended_link) do |f| %>
  <div class="form-group">
    <%= f.text_field :link, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.text_field :title, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.text_field :keywords, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= f.select :search_index, RecommendedLink::SEARCH_INDEXES.map { |t| [t.humanize, t] }, class: "form-control input-lg" %>
  </div>

  <%= f.button "Save", class: "btn btn-success btn-lg" %>
<% end %>
