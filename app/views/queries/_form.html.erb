<%= form_for(query) do |f| %>
  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: 'Query'
    },
    name: "query[query]",
    value: query.query,
    id: "query_query"
  } %>

  <%
    match_types = Query::MATCH_TYPES.map do |t|
      {
        text: t.humanize,
        value: t,
        selected: ((t.humanize.present? && @query) && @query.match_type.include?(t))
      }
    end
  %>


  <%= render "govuk_publishing_components/components/select", {
    id: "query_match_type",
    name: "query[match_type]",
    label: "Match type",
    options: match_types
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Save"
  } %>
<% end %>
