<%= form_tag '/results/result', method: 'get' do %>
  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: 'Path or URL of search result (eg. /book-driving-test)'
    },
    name: "base_path",
    value: @path,
    type: "search"
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Show search result",
    margin_bottom: true
  } %>
<% end %>
