<ol class="breadcrumb">
  <li><%= link_to 'Search results', results_path %></li>
  <li class="active">Inspect Result</li>
</ol>

<%= page_title "Search results" %>

<%= render 'form' %>

<% if @document %>
  <%= table_for @document.to_hash %>

  <div class="callout callout-danger">
        <div class="callout-title">
          Remove search result
        </div>
        <div class="callout-body">
          <p>
            This will remove the item from all search results. You must archive the item to make this permanent.
          </p>

          <%= button_to "Remove result",
            result_path(@path),
            method: "delete",
            class: "btn btn-danger btn-lg",
            data: { confirm: "Are you sure you want to delete this result?" } %>
        </div>
      </div>
<% else %>
  <div class='alert alert-danger'>
    <p>That URL wasn't found. Please try again.</p>
  </div>
<% end %>
