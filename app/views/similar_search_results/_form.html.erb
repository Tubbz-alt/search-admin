<%= form_tag similar_search_result_path(:result), method: :get do %>
  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: 'Path or URL of search result (eg. /guidance/pupil-premium-reviews)'
    },
    name: "base_path",
    value: base_path,
    type: "search"
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Show similar search results",
    name: "commit",
    type: "submit"
  } %>
<% end %>
