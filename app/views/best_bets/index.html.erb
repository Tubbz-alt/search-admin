<h1>Best bets</h1>

<p><%= link_to 'CSV version', best_bets_path(format: 'csv') %></p>

<ul>
  <% @best_bets.each do |best_bet| %>
    <li id="best-bet-<%= best_bet.id %>">
      <%= link_to best_bet.query, edit_best_bet_path(best_bet) %>
      <%= button_to 'Delete', best_bet_path(best_bet), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to 'New best bet', new_best_bet_path %>
